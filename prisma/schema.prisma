generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("SQLITE_URL")
}

enum Role {
  Admin
  User
}

model User {
  id        Int       @id @default(autoincrement())
  name      String
  email     String    @unique
  password  String
  role      Role      @default(User)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Property {
  id           Int      @id @default(autoincrement())
  propertyName String
  address      String
  type         PropertyType
  size         String
  price        String
  description  String
  imageUrl     String
  imagePublicId String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

enum PropertyType {
  Rumah
  Apartemen
  Ruko
  Tanah
}